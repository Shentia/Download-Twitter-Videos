{
  "manifest_version": 3,
  "name": "X Video Downloader",
  "version": "1.1.0",
  "description": "Download videos from X (formerly Twitter)",
  "permissions": [
    "downloads"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://raw.githubusercontent.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    },
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": ["main.js"],
      "world": "MAIN"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Download X Video"
  }
}
